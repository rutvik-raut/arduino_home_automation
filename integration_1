float tval;               // define variable for storing value from sensor LM35
int tempPin = 0;          // define the pin number where output of sensor is connected



void setup()
{
  
Serial.begin(9600);       // define baud rate for serial data transmission

}



void loop()
{

tval = analogRead(tempPin);                       // read the analog value from defined pin
float milivlt = ( tval / 1024.0 ) * 5000;         // accepted value from LM35 is in volts convert to mili volt
float celsius = milivlt/10;                       // convert mili volt value to Celsius
float fahr = (celsius*9)/5 + 32;                  // convert Celsius value to Fahrenheit


Serial.print("\n Temperature in Celsius = ");     // Printing the value of Temperature in Celsius
Serial.print(celsius);
Serial.print(" *C ");
Serial.println();
delay(1000);


/* 
Serial.print("\n Temperature in Fahrenheit = ");    // Printing the value of Temperature in Fahrenheit
Serial.print(fahr);
Serial.print(" *F ");
Serial.println();
*/


}
